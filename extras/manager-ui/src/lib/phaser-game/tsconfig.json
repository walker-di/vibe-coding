{
  "compilerOptions": {
    "target": "ESNext", // Use modern JavaScript features
    "module": "ESNext", // Use modern module system
    "moduleResolution": "node",
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Allow default imports from commonjs modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Specify output directory (though Vite might handle this)
    "rootDir": "./src", // Specify root directory of source files
    "resolveJsonModule": true,
    "sourceMap": true, // Generate sourcemaps for debugging
    "baseUrl": ".", // Base directory for non-relative module imports
    "paths": {
      "@/*": ["src/*"] // Optional: Alias for src directory
    },
    "lib": ["ESNext", "DOM", "DOM.Iterable"] // Include necessary libraries
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files in src
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist
}
