{
  "name": "product-manager",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run && npm run test:e2e && npm run test:storybook",
    "test:e2e": "playwright test",
    "test:storybook": "test-storybook",
    "test:storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npm run build-storybook && npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && npm run test:storybook\"",
    "test:visual": "chromatic --exit-zero-on-changes",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "storybook:test": "test-storybook --url http://localhost:6006"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4",
    "@playwright/test": "^1.49.1",
    "@storybook/addon-a11y": "^9.0.3",
    "@storybook/addon-docs": "^9.0.3",
    "@storybook/addon-svelte-csf": "^5.0.3",
    "@storybook/addon-vitest": "^9.0.3",
    "@storybook/sveltekit": "^9.0.3",
    "@storybook/test-runner": "^0.22.0",
    "@sveltejs/adapter-node": "^5.2.12",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.4",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cytoscape": "^3.21.8",
    "@types/node": "^20",
    "axe-playwright": "^2.1.0",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.30.2",
    "http-server": "^14.1.1",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jsdom": "^26.0.0",
    "storybook": "^9.0.3",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.2.6",
    "vitest": "^3.0.0",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@inlang/paraglide-js": "^2.0.0",
    "better-sqlite3": "^11.8.0",
    "cytoscape": "^3.30.3",
    "cytoscape-compound-drag-and-drop": "^1.1.0",
    "drizzle-orm": "^0.40.0"
  }
}
